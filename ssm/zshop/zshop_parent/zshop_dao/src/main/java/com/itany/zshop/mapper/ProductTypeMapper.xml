<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itany.zshop.dao.ProductTypeDao">
    <sql id="productTypeColumn">
        id,
        name,
        status
    </sql>
    <select id="selectAll" resultType="productType">
        select <include refid="productTypeColumn"/>
        from t_product_type
    </select>
    <select id="selectById" resultType="productType">
        select <include refid="productTypeColumn"/>
        from t_product_type where id=#{id}
    </select>
    <select id="selectByStatus" resultType="productType">
        select <include refid="productTypeColumn"/>
        from t_product_type where status=#{status}
    </select>
    <select id="selectByName" resultType="productType">
        select <include refid="productTypeColumn"/>
        from t_product_type where name=#{name}
    </select>
    <insert id="insert">
        insert into t_product_type(name, status) values(#{name},#{status})
    </insert>
    <update id="updateName">
        update t_product_type set name=#{name } where id=#{id}
</update>
    <update id="updateStatus">
          update t_product_type set status=#{status } where id=#{id}
    </update>
    <delete id="deleteById">
        delete from t_product_type where id=#{id}
    </delete>
</mapper>