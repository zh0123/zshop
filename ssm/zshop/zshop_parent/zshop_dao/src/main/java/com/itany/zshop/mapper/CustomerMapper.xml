<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itany.zshop.dao.CustomerDao">
    <resultMap id="customerMapper" type="Customer">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="loginName" column="login_name"/>
        <result property="password" column="password"/>
        <result property="phone" column="phone"/>
        <result property="address" column="address"/>
        <result property="isValid" column="is_valid"/>
        <result property="registDate" column="regist_date"/>
    </resultMap>
    <resultMap id="customerMapper2" type="Customer">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="loginName" column="login_name"/>
        <result property="password" column="password"/>
        <result property="phone" column="phone"/>
        <result property="address" column="address"/>
        <result property="isValid" column="is_valid"/>
    </resultMap>
    <sql id="customerColumn">
        id,
        name,
        login_name,
        password,
        phone,
        address,
        is_valid,
        regist_date
    </sql>
    <sql id="customerColumn2">
        id,
        name,
        login_name,
        password,
        phone,
        address,
        is_valid

    </sql>
<select id="selectByLoginNameAndPassword" resultMap="customerMapper">
    select <include refid="customerColumn"/>
    from t_customer
    where login_name=#{loginName} and password=#{password}and is_valid=#{isValid}
</select>
    <select id="selectByPhone" resultMap="customerMapper">
        select
        <include refid="customerColumn"/>
        from t_customer
        where phone=#{phone}
    </select>
<select id="findAll" resultMap="customerMapper">
    select
    <include refid="customerColumn2"/>
    from t_customer

</select>
<select id="findById" resultMap="customerMapper">
    select <include refid="customerColumn"/>
     from t_customer
     where id=#{id}
</select>
    <select id="findByParams" parameterType="com.itany.zshop.pojo.Customer" resultMap="customerMapper2">
        select id ,name,login_name,phone,address,is_valid
          from t_customer
          <where>
        <if test="name!=null and name!=''">
            and name like concat(concat('%',#{name}),'%')
        </if>
        <if test="loginName!=null and loginName!=''">
            and login_name like concat(concat('%',#{loginName}),'%')
        </if>
        <if test="phone!=null and phone!=''">
            and phone=#{phone}
        </if>
        <if test="address!=null and address!=''">
            and address=#{address}
        </if>
        <if test="isValid!=null and isValid!=-1">
            and is_valid=#{isValid}
        </if>
          </where>
    </select>
    <update id="updateStatus" parameterType="Customer">
         update t_customer
     set is_valid=#{isValid}
     where id=#{id}
    </update>
 <update id="update" parameterType="Customer">
     update t_customer
     set name=#{name},login_name=#{loginName},phone=#{phone},address=#{address}
     where id=#{id}
 </update>
</mapper>